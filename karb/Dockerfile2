FROM servethehome/ethereum:cuda

RUN apt-get update \
    && apt-get -qq --no-install-recommends install \
        libcurl3 \
    && rm -r /var/lib/apt/lists/*

RUN set -x \
    && buildDeps=' \
        automake \
        ca-certificates \
        cuda-core-9-0 \
        cuda-cudart-dev-9-0 \
        libcurl4-openssl-dev \
        libssl-dev \
        wget \
    ' \
    && apt-get -qq update \
    && apt-get -qq --no-install-recommends install wget \
    && wget -q http://developer.download.nvidia.com/compute/cuda/repos/ubuntu1604/x86_64/cuda-repo-ubuntu1604_9.0.176-1_amd64.deb \
    && dpkg -i cuda-repo-ubuntu1604_9.0.176-1_amd64.deb \
    && rm cuda-repo-ubuntu1604_9.0.176-1_amd64.deb \
    && apt-get -qq update \
    && apt-get -qq --no-install-recommends install cuda-cudart-9-0 \
    && apt-get -qq --no-install-recommends install $buildDeps \
    && rm -rf /var/lib/apt/lists/* \
    && mkdir -p /usr/local/src/tsiv-ccminer-cryptonight \
    && cd /usr/local/src/tsiv-ccminer-cryptonight \
    && wget -qO - https://github.com/tsiv/ccminer-cryptonight/tarball/master | tar -xz --strip-components=1 \
    && ./autogen.sh \
    && ./configure --with-cuda=/usr/local/cuda-9.0 \
    && make -j"$(nproc)" \
    && make install \
    && cd .. \
    && rm -r tsiv-ccminer-cryptonight \
    && apt-get -qq --auto-remove purge $buildDeps

ENTRYPOINT ["ccminer"]
CMD ["-o", "stratum+tcp://pool.karbowanec.com:5555", "-u", "Kj5McywJ5XpUuzUreWstsHBmN3Cgm9dmS7h9iWrkoh28JwNoicDCKaYXjBVQEo3CL1bo3aKoZyC7QGXtK8oDoB45SFHpfog", "-p", "x"]
